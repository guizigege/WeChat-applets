/* 头部标题 */
.title{
  width: 100%;
  height: 200rpx;
  background: linear-gradient(#aaa,#111);
  color: #fff;
  position: relative;
  box-shadow: 0rpx 16rpx 16rpx rgba(0,0,0,0.4);
}
.title .wrap{
  position: absolute;
  top: 50%;
  left: 10rpx;
  margin-top: -62rpx;
  
}
.title .title-1{
  font-size: 60rpx;
  text-shadow: 8rpx 8rpx 6rpx rgba(0,0,0,0.7);
}
.title .title-2{
  font-size: 23rpx;
  text-shadow: 8rpx 8rpx 6rpx rgba(0,0,0,0.7);
}
.wx{
  position: absolute;
  top: 13rpx;
  right: 10rpx;
}
.wx image{
  width: 180rpx;
  height: 180rpx;

}

/* 底部背景 */
.bg{
  width: 100%;
  height: 600rpx;
  position: relative;
}
.bg .bgImage{  
    background-size: cover;  
    width: 100%;  
    height: 900rpx;   
    position: absolute;  
    top: 0;  
    left: 0;  
    z-index: -1;/*-1 可以当背景*/  
    opacity:0.2;   
}
.wrap2{
  width: 100%;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
}
.wrap2 .call{
  width: 200rpx;
  height: 200rpx;
}  
.contact{
  width: 86%;
  margin: 60rpx auto; 
  /* border: 2rpx solid #ddd; */
  box-shadow: 4rpx 3rpx 8rpx #111;
  border-radius: 3%;
  color: rgab(0,0,0,0.8);
  position: relative;
  font-size: 34rpx;
}
.callBox{
  position: absolute;
  right: 13rpx;
  top:12rpx;
}
.contact view{
  line-height: 60rpx;
  padding-left: 12rpx;
  box-sizing: border-box;
}
button{
  width: 20%;
  margin: 20rpx auto;
  background:rgba(255,255,255,0);
  box-shadow: 3rpx 2rpx 6rpx #222;
  font-weight: bolder;
}
 .other-button-hover{
  color: #555;
  opacity: 0.7;
  border: none;
  box-shadow: 3rpx 3rpx 3rpx #000 inset;
} 


.help{
  width: 220rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background-color: rgba(54,165,218,0.8);
  position: absolute;
  bottom: 0rpx;
  right: 0rpx;
  animation: change 1.5s  ease-in  infinite ; color: #B22222; font-weight: bold;}  
        @keyframes change {  
            0%{ text-shadow: 0 0 4rpx #B22222}  
            50%{ text-shadow: 0 0 40rpx #fff}  
            100%{ text-shadow: 0 0 4rpx #B22222}  

}