Page{
  width: 100%;
  height: 100%;
}
.border{
  width: 88%;
  height: 70%;
  border: 8rpx solid #36A5DA;
  margin: 10% auto;
  position: relative;  
  box-sizing: border-box;
}
.title{
  width: 130rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: green;
  text-shadow:0 0 1px currentColor,-1px -1px 1px #030,0 -1px 1px #030,1px -1px 1px     #030,1px 0 1px #030,1px 1px 1px #030,0 1px 1px #030,-1px 1px 1px #030,-1px    0      1px #030;
  text-align: center;
  background: #fff;
  position: absolute;
  top: -36rpx;
  left: 20rpx;
}

.border .content{
 
  width: 88%;
  height: 100%;
  margin: 40rpx auto 0rpx;
  position: relative;
}

.content .wrap{
  width: 100%;
  margin-top: 30rpx;
}
.wrap .item{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  margin-bottom: 20rpx;
  position: relative;
}
.wrap text{
  display: inline-block;
  width: 20%;

}
.wrap input{
  width: 70%;
  font-size: 28rpx;
  display: inline-block;
  border: 2rpx solid #aaa;
  box-sizing: border-box;
  vertical-align:middle;
  padding-left: 10rpx;
 
}
.wrap textarea{
  border: 2rpx solid #aaa;
  width: 100%;
}


.buttonView{
  margin-top: 40rpx;
}
.btn{
    width: 200rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    color: #fff;
    background-color: #36A5DA;
    text-shadow:0 0 1px currentColor,-1px -1px 1px #030,0 -1px 1px #030,1px -1px 1px #030,1px 0 1px #030,1px 1px 1px #030,0 1px 1px #030,-1px 1px 1px #030,-1px 0 1px #030;
}
.buttonView .btnDisabled{
    width: 200rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    color: #fff;
    background-color: #ddd;

}

.btn-hover{
    color: #fff;
    opacity: 0.8;
    box-shadow: 3rpx 3rpx 3rpx #000 inset;
}

.fz{
  font-size: 24rpx;
}

.icon-success{
  width:30rpx;
  height: 30rpx;
}
.icon-error{
  width: 46rpx;
  height: 46rpx;
  position: absolute;
  top: 6rpx;
  right: 19rpx;

}


.tip{
  color: #B22222;
  font-size: 24rpx;
  position:absolute;
  top: 216rpx;
  left: 20%;
}