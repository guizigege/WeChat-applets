<!--pages/swiper/message/article/article.wxml-->
<view class="article">
  <view class="title">{{showMessage[iMessage].express_title}}</view>
  <view class="time">{{showMessage[iMessage].express_time}}</view>

  <text class="content" style="font-weight:400;line-height:50rpx;color:#666">{{showMessage[iMessage].express_content}}</text>

  <view wx:if="{{showMessage[iMessage].express_image!=null}}"><image wx:if="{{showMessage[iMessage].express_image.length>0}}" src="{{showMessage[iMessage].express_image}}" style=" width: 100%;height: 680rpx;"></image></view>
</view>

