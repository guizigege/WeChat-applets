.title{
  width: 100%;
  height: 100rpx;
  font-weight:bold;color:#3B9425;
  text-shadow:0 0 1px currentColor,-1px -1px 1px #030,0 -1px 1px #030,1px -1px 1px #030,1px 0 1px #030,1px 1px 1px #030,0 1px 1px #030,-1px 1px 1px #030,-1px 0 1px #030;
  font-size: 60rpx;
  background-color: #eee;
  border-left:10rpx solid #3B9425;
  border-right:10rpx solid #3B9425;
  border-bottom: 4rpx solid #bbb;
  box-shadow: 4rpx 5rpx 3rpx #111;
  line-height:  100rpx;
  text-align: center;
  box-sizing: border-box;

}


.camp-video .video{
  width: 90%;
  margin: 28rpx auto 30rpx;
  border: 2rpx solid #ddd;
  box-shadow:4px 2px 8px #555;
  box-sizing: border-box;
}

.camp-video .video .video-inside{
  width: 92%;
  margin: 0 auto 20rpx;
}
.video .icon{
   width: 32rpx;
   height: 32rpx;
   margin: -4rpx 0;
}
.video .video-title{
  font-size: 32rpx;
}